<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_user_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile"/>
    <TextView
        android:id="@+id/username_user_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image_user_search"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:textSize="19dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online_user_search"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_width="12dp"
        app:civ_border_color="#05df29"
        android:src="@drawable/ic_profile"
        android:layout_below="@id/username_user_search"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-16dp"
        android:layout_toEndOf="@id/profile_image_user_search"
        android:layout_toRightOf="@id/username_user_search"
        android:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline_user_search"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_width="12dp"
        app:civ_border_color="#bfbfbf"
        android:src="@drawable/ic_profile"
        android:layout_below="@id/username_user_search"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-16dp"
        android:layout_toEndOf="@id/profile_image_user_search"
        android:layout_toRightOf="@id/username_user_search"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/massage_last_user_search"
        android:layout_below="@id/username_user_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image_user_search"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:padding="6dp"
        android:textSize="19dp"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryDark"/>


</RelativeLayout>